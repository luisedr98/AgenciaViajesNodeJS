extends ./layouts/index 
block contenido  
    main.container.mt-5
        h1(class="text-center mt-5") #{titulo}
        include ./layouts/testimonial
        .row
            .col-md-12
                h2(style="color: #dc135f" class="d-block w-100 text-center") Agregar un testimonial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control" value= nombre || "")
                        .form-group
                            label(for="correo") Correo
                            input#nombre(type="email", placeholder="Tu correo", name="correo", class="form-control" value= correo || "")
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#nombre(type="text", placeholder="Tu mensaje", name="mensaje", class="form-control" row=2)= mensaje
                        input.btn.btn-success.btn-block(type="submit")